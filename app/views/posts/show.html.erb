<p id="notice"><%= notice %></p>

<h2><%= @post.title %></h2>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<hr/>

<div class="field is-grouped">
  <div class="control">
    <%= link_to 'Edit', edit_post_path(@post), class: 'button is-primary' %>
  </div>
  <div class="control">
    <%= link_to 'Back', posts_path, class: 'button is-link' %>
  </div>
</div>
